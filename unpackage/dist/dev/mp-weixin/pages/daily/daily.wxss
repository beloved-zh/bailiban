.daliy-item {
  width: 700rpx;
  height: 300rpx;
  margin: 20rpx 25rpx 10rpx 25rpx;
  background-color: #FFFFFF;
  border-radius: 10rpx;
}
.daliy-item .daliy-item-head {
  width: 650rpx;
  height: 80rpx;
  line-height: 80rpx;
  /* border-bottom: 1rpx solid #eee; */
  margin: 0 auto;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
          flex-direction: row;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  color: #666666;
}
.daliy-item .xlx {
  width: 700rpx;
  height: 1rpx;
  border-bottom: 1rpx solid #eee;
}
.daliy-item .daliy-item-main {
  width: 650rpx;
  height: 220rpx;
  margin: 0 auto;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
          flex-direction: row;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
}
.daliy-item .daliy-item-main .left {
  height: 80%;
  margin: auto 0;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
}
.daliy-item .daliy-item-main .left .tagName {
  font-size: 35rpx;
  font-weight: bold;
}
.daliy-item .daliy-item-main .left .weekDate {
  font-size: 28rpx;
  color: #666666;
}
.daliy-item .daliy-item-main .right {
  height: 80%;
  margin: auto 0;
  display: inline-block;
  white-space: nowrap;
  line-height: 150rpx;
}
.daliy-item .daliy-item-main .right text:nth-child(1) {
  font-size: 50rpx;
}
.daliy-item .daliy-item-main .right text:nth-child(2) {
  font-size: 28rpx;
}
