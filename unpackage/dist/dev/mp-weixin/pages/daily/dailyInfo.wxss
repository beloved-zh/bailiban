.head {
  width: 750rpx;
  background-color: #f2f2f2;
  color: #12c494;
}
.head .head-main {
  padding: 20rpx 25rpx;
  font-size: 32rpx;
  line-height: 60rpx;
}
.head .head-main .pmName, .head .head-main .tagName {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
          flex-direction: row;
}
.head .head-main .pmName view:nth-child(1), .head .head-main .tagName view:nth-child(1) {
  display: inline-block;
  white-space: nowrap;
}
.main .dailInfo-item {
  width: 700rpx;
}
.main .dailInfo-item .dailInfo-head {
  margin: 25rpx;
}
.main .dailInfo-item .dailInfo-head .title {
  width: 100%;
  font-size: 32rpx;
  font-weight: bold;
  line-height: 45rpx;
}
.main .dailInfo-item .dailInfo-head .title .type {
  background-color: #12c494;
  border-radius: 5px;
  font-size: 26rpx;
  line-height: 40rpx;
  text-align: center;
  color: #FFFFFF;
  padding: 5rpx 10rpx;
  margin-right: 10rpx;
}
.main .dailInfo-item .optionsList {
  margin: 25rpx;
  width: 700rpx;
}
.main .dailInfo-item .optionsList .options {
  width: 700rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
          flex-direction: row;
  margin: 25rpx 0;
}
.main .dailInfo-item .optionsList .options .options-time {
  width: 65rpx;
  height: 65rpx;
  border: 1rpx solid #333333;
  border-radius: 50%;
  /* background-color: $color; */
  text-align: center;
  line-height: 65rpx;
}
.main .dailInfo-item .optionsList .options .options-time .iconfont {
  font-size: 45rpx;
  line-height: 70rpx;
  color: #FFFFFF;
}
.main .dailInfo-item .optionsList .options .options-main {
  width: 610rpx;
  margin-left: 25rpx;
  line-height: 65rpx;
}
.main .dailInfo-item .answer {
  margin: 25rpx;
  width: 700rpx;
  height: 180rpx;
  border-radius: 10rpx;
  background-color: #f2f2f2;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  font-size: 32rpx;
  font-weight: bold;
  line-height: 45rpx;
}
.main .dailInfo-item .answer .userAnswer {
  margin: 25rpx;
}
.main .dailInfo-item .answer .rightAnswer {
  margin: 25rpx;
}
.main .dailInfo-item .mydesc {
  margin: 25rpx;
  width: 700rpx;
  line-height: 45rpx;
}
.main .dailInfo-item .mydesc text {
  font-size: 32rpx;
  font-weight: bold;
}
.main .dailInfo-item .fg {
  width: 750rpx;
  height: 10rpx;
  background-color: #f2f2f2;
}

